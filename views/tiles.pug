doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;")= (pageTitle || "")
			.hero-foot
		article.article
			include includes/body.pug
			+section()
				each record in records[0]
					if record.publish
						.box: .columns
							.column: h1= record.title
							.column.is-three-quarters
								+addText(record.body)
								if record.date
									p
										strong Date: &nbsp;
										+addDate(record.date, "span")
								if record.speaker
									p
										span: strong Speaker: &nbsp;
											+addText(records[1][record.speaker[0]]["name"], "span")
										| &nbsp; (
										+addText(records[1][record.speaker[0]]["email"], "span")
										| )
								if record.contact
									p
										span: strong Contact: &nbsp;
											+addText(records[1][record.contact[0]]["name"], "span")
										| &nbsp; (
										+addText(records[1][record.contact[0]]["email"], "span")
										| )

		//- Footer
		include includes/footer.pug