				a.navbar-item(href="/youth.html") Youth
				a.navbar-item(href="/coya.html") CoYA
				a.navbar-item(href="/ministries.html") Ministries
				a.navbar-item(href="/forms.html") Forms &amp; Reg
			+dropdown("Video")
