mixin dropdown(link)
	.navbar-item.has-dropdown.is-hoverable
		.navbar-link.is-unselectable.navbarDropdownTitle(style="cursor: default;")= link
		.navbar-dropdown.is-boxed
			block

nav.navbar.is-transparent
	//-  box-shadow: 0px 3px 6px #888888;
	.navbar-brand.is-flex(style="justify-content: center;")
		a.navbar-item(href="/index.html")
			img(src="/assets/img/logo_black.png")
		a.navbar-burger(data-target="navMenu")
			- for (var x = 0; x < 3; x++)
				span
	//- To add new page:
	//- 1. Add link to this nav
	//- 2. Create .pug file in views/ (duplicate aboutSections.pug)
	//- 3. Create route in routes/routes.js
	//- 4. To link Airtable -- check routes/models.js and routes/routes.js to make sure code matches Airtable tables
	#navMenu.navbar-menu
		.navbar-start
			.navbar-item &nbsp;
			a.navbar-item(href="/index.html#welcome", onclick="jumpToWelcome();") Welcome
			+dropdown("About")
				a.navbar-item(href="/values.html") Values
				a.navbar-item(href="/history.html") History
				a.navbar-item(href="/staff.html") Our Staff
			+dropdown("Experience")
