doctype html
html(lang="en")
	include includes/head.pug
	body
		//- Full screen video for computer users
		section#frontPageHero.hero.is-fullheight-aspect-ratio.is-hidden-touch
			.hero-head
				include includes/nav.pug
			//- .hero-body.is-hidden-touch
			//- 	.container.has-text-centered
			//- 		//- h1.title.is-1(style="padding-top: 1rem;") CONVERGE
			//- .hero-foot
		//- Simple picture for mobile users
		section#mobileHeroHeadContainer.is-hidden-aspect-ratio(style="height: 3.25rem;")
			.hero-head#mobileHeroHead
				include includes/nav.pug
		section#mobileHeroImg.is-hidden-aspect-ratio
			img(src="../../assets/img/decal_large.jpg")
		article.article
			include includes/body.pug
			#welcome

			//- BEGIN ARTICLE.PUG CODE
			each record in records[0]
				+section(record.title)
					case record.style
						when "right"
							.columns
								.column.is-two-thirds
									+addDate(record.date)
									+addText(record.body)
								.column: figure.image: +addImg(record.img)
						when "left"
							.columns
								.column: figure.image: +addImg(record.img)
								.column.is-two-thirds
									+addDate(record.date)
									+addText(record.body)
						when "top"
						default
							.columns.is-centered
								.column.is-half: figure.image: +addImg(record.img)
							.columns.is-centered
								.column
									+addDate(record.date)
									+addText(record.body)
			//- END ARTICLE.PUG CODE

		//- Footer
		include includes/footer.pug
