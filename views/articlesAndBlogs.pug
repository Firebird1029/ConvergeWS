mixin addCard(record)
	.card
		.card-image
			figure.image.is-square.is-marginless
				+addImg(record.img)
		.card-content
			.content
				h4= (record.name || "")
				strong: em= (record.role) ? record.role.join(", ") : ""
				p: em= (record.description || "")
				p= (record.bio || "")

doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;")= (pageTitle || "")
			.hero-foot
		article.article
			include includes/body.pug
			//- ARTICLESANDBLOGS.PUG SPECIFIC CODE LINE
			each record in records[0]
				+section(record.title)
					case record.style
						when "right"
							.columns
								.column.is-two-thirds: p= (record.body || "")
								.column: figure.image: +addImg(record.img)
						when "left"
							.columns
								.column: figure.image: +addImg(record.img)
								.column.is-two-thirds: p= (record.body || "")
						when "top"
						default
							.columns.is-centered
								.column.is-half: figure.image: +addImg(record.img)
							.columns.is-centered
								.column: p= (record.body || "")
				//- BEGIN ARTICLESANDBLOGS.PUG SPECIFIC CODE
				+section("Authors")
				.columns.is-multiline
					each record in records[1]
						.column.is-one-third
							+addCard(record)
				//- END ARTICLESANDBLOGS.PUG SPECIFIC CODE

		//- Footer
		include includes/footer.pug